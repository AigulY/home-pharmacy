<%- include('../partials/head', { errors, info }); %>
<%- include('../partials/navbar'); %>
<style>
  body {
    background-color: #dee2df;
    color: #2a3e40;
  }

  .container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 85vh;
  }

  .content-wrapper {
    align-items: center;
    justify-content: center;
    width: 90%;
    max-width: 800px;
    background-color: #2c3e3c;
    padding: 2rem;
    border-radius: 50px;
    box-shadow: 0 0 2px rgba(0, 0, 0, 0.3);
    text-align: center;
  }

  .vitamin-title {
    font-size: 3rem;
    color: white;
    margin-bottom: 3rem;
    text-align: center;
  }

  .form-control {
    padding: 1.2rem;
    border-radius: 50px;
    border: none;
    margin-bottom: 0.4rem;
    width: 100%;
    max-width: 600px;
    margin: 0 auto; 
  }

  .form-select-wrapper {
    display: flex;
    align-items: center;
    margin-bottom: 0.2rem;
    max-width: 665px;
  }

  .btn-primary,
  .btn-back {
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 50px;
    color: white;
    font-size: 1.2rem;
    cursor: pointer;
    height: 46px;
    width: 100%;
    max-width: 250px;
    text-align: center;
    margin-bottom: 1rem;
    display: inline-block; 
  }

  .btn-primary {
    background-color: #007bff;
    margin-top: 2.4rem;
    margin-right: 0.5rem; 
   }

  .btn-back {
    margin-top: 2.4rem;
    background-color: #8bcdc4;
  }
  .form-check {
    display: flex;
    align-items: center;
    margin-left: 360px;
  }

  .form-check-label {
    margin-left: 10px;
    font-size: 1.1rem;
  }

  .checkbox-note {
    margin-top: 2px;
    font-size: 1rem;
    color: #6c757d;
  }
  .form-check {
      flex-direction: column;
      align-items: flex-start;
  }
  

</style>

<div class="container">
  <div class="content-wrapper">
    <h1 class="vitamin-title"><%= vitamin_values.title %></h1>
    <form action="<%= vitamin_values.action %>" method="POST">
      <div class="mb-3">
        <input name="brandName" id="brandName" type="text" class="form-control" placeholder="Vitamin Name" value="<%= vitamin_values.brandName %>"/>
      </div>
      <div class="mb-3">
        <textarea name="notes" id="notes" placeholder="Notes" class="form-control"><%= vitamin_values.notes %></textarea>
      </div>
      <div class="mb-3 form-check">
        <input class="form-check-input" type="checkbox" id="isFeatured"  name="isFeatured" <% if (vitamin_values.isFeatured)  { %>checked<% } %> >
        <label class="form-check-label" for="isFeatured">
          Is Featured
        </label>
      </div>
      <div class="mb-2 checkbox-note">
        Note: Check this box to mark the vitamin as Featured.
      </div>
      <div class="mb-3">
        <button type="submit" class="btn btn-primary"><%= vitamin_values.submit %></button>
          <a href="/vitamins" class="btn btn-back">Back</a>
        <input type="hidden" name="_csrf" value="<%= _csrf %>">
      </div>
    </form>
  </div>
</div>
<%- include("../partials/foot") %>
